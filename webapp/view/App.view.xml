<mvc:View
	controllerName="iot.hub.ui.controller.App"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt"
	displayBlock="true"
	xmlns="sap.m">
	<tnt:ToolPage
		id="mainPage"
		showHeader="true"
		showFooter="true"
		title="{i18n>title}">
		<tnt:header>
			<tnt:ToolHeader id="pageHeader">
				<Button icon="sap-icon://menu2" type="Transparent"/>
				<Label text="IoT Hub Admin"/>
				<ToolbarSpacer/>
				<Button icon="sap-icon://message-popup" type="Transparent" text="{i18n>notificationsButtonText}"/>
				<Button icon="sap-icon://message-information" type="Transparent" text="{i18n>aboutButtonText}" press="onAboutDialogOpen"/>
			</tnt:ToolHeader>				
		</tnt:header>
		<tnt:sideContent>				
			<tnt:SideNavigation expanded="true" itemSelect="onItemSelect">
				<tnt:NavigationList items="{path: '/navigation'}">
					<tnt:NavigationListItem text="{title}"
											icon="{icon}"
											enabled="{enabled}"
											expanded="{expanded}"
											items="{items}"
											key="{key}">
						<tnt:NavigationListItem text="{title}"
												key="{key}"
												enabled="{enabled}">
						</tnt:NavigationListItem>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList>
						<tnt:NavigationListItem text="Account" icon="sap-icon://account"/>
						<tnt:NavigationListItem text="App Help" icon="sap-icon://sys-help"/>
						<tnt:NavigationListItem text="Logout" icon="sap-icon://log"/>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>				
		</tnt:sideContent>
		<tnt:mainContents>
			<core:Fragment fragmentName="iot.hub.ui.fragment.Breadcrumb" type="XML"/>
			<NavContainer id="pageContainer">
				<pages></pages>
			</NavContainer>	
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>