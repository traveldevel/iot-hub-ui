<mvc:View
	controllerName="iot.hub.ui.controller.UserList"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
    xmlns="sap.m">
    <Page showHeader="false">
        <content>
            <ScrollContainer
                    horizontal="false"
                    vertical="true"
                    height="100%">
                    <content>
                        <Table
                            id="userTable"
                            items="{metadata>/user}"
                            visibleRowCount="15">
                            <headerToolbar>
                                <Toolbar>
                                    <Title id="title" text="User List"/>
                                    <ToolbarSpacer/>
                                    <Button
                                        icon="sap-icon://decline"
                                        tooltip="Clear all filters"
                                        press="clearAllFilters"/>
                                    <ToolbarSeparator/>
                                    <SearchField
                                        placeholder="Filter"
                                        value="{ui>/globalFilter}"
                                        search="filterUserList"
                                        width="15rem"/>
                                </Toolbar>
                            </headerToolbar>
                            <columns>
                                <Column>
                                    <Text text="{i18n>name}" />
                                </Column>
                                <Column>
                                    <Text text="{i18n>firstname}" />
                                </Column>  
                                <Column>
                                    <Text text="{i18n>lastname}" />
                                </Column>                                 
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Text text="{metadata>name}" />
                                        <Text text="{metadata>name}" />
                                        <Text text="{metadata>name}" />
                                    </cells>
                                </ColumnListItem>
                            </items>                                    
                        </Table>
                    </content>
            </ScrollContainer>
        </content>
    </Page>
</mvc:View>