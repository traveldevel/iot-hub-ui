<mvc:View
	controllerName="iot.hub.ui.controller.RawDataList"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	displayBlock="true"
    xmlns="sap.m">
    <Page showHeader="false">
        <content>
            <ScrollContainer
                    horizontal="false"
                    vertical="true"
                    height="100%">
                    <content>
                        <Table
                            id="rawdataTable"
                            inset="false"
                            items="{rawdata>/raw_data}"
                            visibleRowCount="15">
                            <headerToolbar>
                                <Toolbar>
                                    <Title id="title" text="Raw Data List"/>
                                    <ToolbarSpacer/>
                                    <Button
                                        icon="sap-icon://decline"
                                        tooltip="Clear all filters"
                                        press="clearAllFilters"/>
                                    <ToolbarSeparator/>
                                    <SearchField
                                        placeholder="Filter"
                                        value="{ui>/globalFilter}"
                                        search="filterRawDataList"
                                        width="15rem"/>
                                </Toolbar>
                            </headerToolbar>
                            <columns>
                                <Column>
                                    <Text text="{i18n>createdAtText}" />
                                </Column>
                                <Column>
                                    <Text text="{i18n>deviceText}" />
                                </Column>  
                                <Column>
                                    <Text text="{i18n>groupText}" />
                                </Column>
                                <Column>
                                    <Text text="{i18n>projectText}" />
                                </Column>                                                                  
                                <Column>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem vAlign="Middle" press="handleRawDatasPress">
                                    <cells>
                                        <Text text="{
                                            path: 'rawdata>created_at',
                                            type: 'sap.ui.model.type.String',
                                            formatter: '.formatDate'
                                        }"/>
                                        <Text text="{rawdata>device_id}"/>
                                        <Text text="{rawdata>group_id}"/>
                                        <Text text="{rawdata>project_id}"/>
                                        <Button text="{i18n>valuesText}" press="onValuesPress" app:RawDataId="{rawdata>_id}"/>
                                    </cells>
                                </ColumnListItem>
                            </items>                                    
                        </Table>
                    </content>
            </ScrollContainer>
        </content>
    </Page>
</mvc:View>